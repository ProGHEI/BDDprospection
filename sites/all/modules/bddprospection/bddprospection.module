     function bddprospection_consulter_archives() {

      # configure the table header columns
      $header = array(  
        array('data' => 'Date_prospection',      'field' => 'Date_prospection',      'sort' => 'ASC'),
        array('data' => 'Nom_Prospecteur',       'field' => 'Nom_Prospecteur',       'sort' => 'ASC'),
        array('data' => 'Nom_entreprise',        'field' => 'Nom_entreprise',        'sort' => 'ASC'),
        array('data' => 'Contact',               'field' => 'Contact',               'sort' => 'ASC'),
        array('data' => 'Fonction',              'field' => 'Fonction',              'sort' => 'ASC'),
        array('data' => 'Telephone',             'field' => 'Telephone',             'sort' => 'ASC'),
        array('data' => 'Mail',                  'field' => 'Mail',                  'sort' => 'ASC'),
        array('data' => 'Appreciation',          'field' => 'Appreciation',          'sort' => 'ASC'),
        array('data' => 'Relance',               'field' => 'Relance',               'sort' => 'ASC'),
    
      );

      # set the database table and initial SelectQuery options
      # $select is a SelectQuery object.
      # @see http://api.drupal.org/api/drupal/includes--database--select.inc/class/Se...
      $select = db_select('bddprospectionprog_archives_2008_2011','p')
                  ->extend('PagerDefault')
                  ->extend('TableSort');

      # get the desired fields
      # orderByHeader is a TableSort method (http://api.drupal.org/api/drupal/includes--tablesort.inc/function/TableS...)
      $select->fields('p', array('Date_prospection', 'Nom_Prospecteur', 'Nom_entreprise', 'Contact', 'Fonction','Telephone','Mail','Appreciation','Relance'))
             ->limit(20)
             ->orderByHeader($header)
             ->orderBy('Date_prospection', 'DESC');  # TODO this call seems to be losing to orderByHeader on page load

      # execute the query
      $results = $select->execute();

      # configure the table rows, making the first column a link to our 'edit' page
      $rows = array();
      foreach ($results as $row) {
        $rows[] = array($row->Date_prospection,                           
                        $row->Nom_Prospecteur,
                        $row->Nom_entreprise,
                        $row->Contact,
                        $row->Fonction,
                        $row->Telephone,
                        $row->Mail,
                        $row->Appreciation,
                        
        );
      }

      $output = theme('table', array('header' => $header,
                                     'rows' => $rows ));

      # add the pager
      $output .= theme('pager');

      return $output;

    }



    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    

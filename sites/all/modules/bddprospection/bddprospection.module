    //PAGE CONSULTER APPELS
    
    function bddprospection_consulter_appels() {

  # configure the table header columns
  $header = array(  
    array('data' => 'Numéro appel',                   'field' => 'Numero_Appel',               'sort' => 'ASC'),
    array('data' => 'Date',                           'field' => 'Date_appel',                 'sort' => 'ASC'),
    array('data' => 'Etudiant',                       'field' => 'Etudiant',                   'sort' => 'ASC'),
    array('data' => 'Entreprise',                     'field' => 'Entreprise',                 'sort' => 'ASC'),
    array('data' => 'Contact',                        'field' => 'Contact',                    'sort' => 'ASC'),
    array('data' => 'Appreciation',                   'field' => 'Appreciation',               'sort' => 'ASC'),
    array('data' => 'Relance',                        'field' => 'Relance',                    'sort' => 'ASC'),
    array('data' => 'Courriel envoye',                'field' => 'Courriel_envoye',            'sort' => 'ASC'),
    array('data' => 'Plaquette envoyee',               'field' => 'Plaquette_envoyee',           'sort' => 'ASC'),
    array('data' => 'Rendez vous obtenu',             'field' => 'Rendez_vous_obtenu',         'sort' => 'ASC'),
    array('data' => 'Date du rendez-vous',            'field' => 'Date_rendez_vous',           'sort' => 'ASC'),
    array('data' => 'Remarques complémentaires',      'field' => 'Remarques_complementaires',  'sort' => 'ASC'),
    array('data' => 'Rappel',                         'field' => 'Rappele',                    'sort' => 'ASC'),
 
  );

  # set the database table and initial SelectQuery options
  # $select is a SelectQuery object.
  # @see http://api.drupal.org/api/drupal/includes--database--select.inc/class/Se...
  $select = db_select('bddprospectionprog_appel','p')
              ->extend('PagerDefault')
              ->extend('TableSort');

  # get the desired fields
  # orderByHeader is a TableSort method (http://api.drupal.org/api/drupal/includes--tablesort.inc/function/TableS...)
  $select->fields('p', array('Numero_Appel', 'Date_appel', 'Etudiant', 'Entreprise', 'Contact','Appreciation','Relance','Courriel_envoye','Plaquette_envoyee','Rendez_vous_obtenu','Date_rendez_vous','Remarques_complementaires','Rappele'))
         ->limit(20)
         ->orderByHeader($header)
         ->orderBy('Numero_Appel', 'DESC');  # TODO this call seems to be losing to orderByHeader on page load

  # execute the query
  $results = $select->execute();

  # configure the table rows, making the first column a link to our 'edit' page
  $rows = array();
  foreach ($results as $row) {
    $rows[] = array($row->Numero_Appel,                           
                    $row->Date_appel,
                    $row->Etudiant,
                    $row->Entreprise,
                    $row->Contact,
                    $row->Appreciation,
                    $row->Relance,
                    $row->Courriel_envoye,
                    $row->Plaquette_envoyee,
                    $row->Rendez_vous_obtenu,
                    $row->Date_rendez_vous,
                    $row->Remarques_complementaires,
                    $row->Rappele,
    );
  }

  $output = theme('table', array('header' => $header,
                                 'rows' => $rows ));

  # add the pager
  $output .= theme('pager');

  return $output;

}
   


